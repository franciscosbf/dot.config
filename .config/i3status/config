general {
        colors = true
        interval = 6
}

order += "wireless _first_"
order += "ethernet _first_"
order += "volume master"
order += "disk /"
order += "memory"
order += "cpu_usage"
order += "battery all"
order += "tztime local"

volume master {
        format = "ðŸ”‰ %volume"
        format_muted = "ðŸ”‡ %volume"
